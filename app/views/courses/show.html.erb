<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @course.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @course.description %>
</p>

<p>
  <strong>Instructor:</strong>
  <%= @course.user.username %>
</p>

<% if current_user.admin? %>
  <%= link_to "Add quiz to this course", new_quiz_path, class: "btn btn-primary" %>
<% end %>

<% if @course.quizzes.present? %>
  <ol>
    <% @course.quizzes.each do |quiz| %>
      <li>
        <%= link_to quiz.name, quiz_path(quiz) %>, <%= quiz.questions.count %>
      </li>
    <% end %>
  </ol>
<% end %>

<% if current_user.admin? %>
  <%= link_to 'Edit Course', edit_course_path(@course) %> |
  <%= link_to 'Admin dashboard', admin_dashboard_path %>
<% end %>
