<div class="nested-fields">

  <div class="form-group row">
    <!-- <label class="col-sm-1 col-form-label"><%= form.label :correct %></label> -->

    <div class="col-sm-2 custom-control custom-switch text-center">

      <%= form.check_box :correct, {class: "custom-control-input", id: "switch-[#{form.index}]"}, "true", "false" %>

      <label class="custom-control-label col-form-label" for="switch-[<%= form.index %>]">Correct</label>
    </div>
    <div class="col-sm-10">

      <%= form.text_area :choice_body, id: :choice_body, class: "form-control form-control-lg" %>
      <%= link_to_remove_association "remove choice", form %>
    </div>

  </div>

</div>
