<h2>Edit <%= @user.username %></h2>

<%= form_for(@user, url: user_path(@user.username), html: { method: :patch }) do |f| %>

  <div class="field form-group">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :firstname %><br />
    <%= f.text_field :firstname, autofocus: true, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :lastname %><br />
    <%= f.text_field :lastname, autofocus: true, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :team %><br />
    <%= f.select :team_id, options_from_collection_for_select(@teams, 'id', 'name', selected: @user.team_id) %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

<hr />
<h3>Danger Zone</h3>
<div class="field form-group">
  <%= link_to "Send password reset email", new_password_path(@user), class: "btn btn-outline-danger" %>
</div>

<div class="field form-group">
  <%= link_to "Delete User", user_path(@user.username), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure you want to delete this user?"} %>
</div>
