<div class="row">
    <div class="col-sm">
      <div class="jumbotron">
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <div class="form-group">
            <label class="col-form-label col-form-label-lg" for="inputLarge"><%= f.label :username %></label>
            <small>Something safe for work please!</small>
            <%= f.text_field :username, autofocus: true, class: 'form-control form-control-lg' %>
          </div>
        </div>

        <div class="field">
          <div class="form-group">
            <label class="col-form-label col-form-label-lg" for="inputLarge"><%= f.label :email %></label>
            <%= f.email_field :email, autofocus: true, class: 'form-control form-control-lg' %>
          </div>

        </div>

        <div class="field">
          <div class="form-group">
            <label class="col-form-label col-form-label-lg" for="inputLarge"><%= f.label :password %></label>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: 'form-control form-control-lg' %>
          </div>

        </div>

        <div class="field">
          <div class="form-group">
            <label class="col-form-label col-form-label-lg" for="inputLarge"><%= f.label :password_confirmation %><br /></label>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control form-control-lg' %>
          </div>

        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: 'btn btn-primary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
  </div>
</div>
</div>
